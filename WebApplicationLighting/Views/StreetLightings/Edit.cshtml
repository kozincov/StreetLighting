@model WebApplicationLighting.StreetLightings

@{
    ViewData["Title"] = "Edit";
}

<h2>Изменение</h2>

<h4>Освещение Улиц</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StreetLightingId" />
            <div class="form-group">
                <label asp-for="CountLantern" class="control-label"></label>
                <input asp-for="CountLantern" class="form-control" />
                <span asp-validation-for="CountLantern" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Failure" class="control-label"></label>
                <input asp-for="Failure" class="form-control" />
                <span asp-validation-for="Failure" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LampId" class="control-label"></label>
                <select asp-for="LampId" class="form-control" asp-items="ViewBag.LampId"></select>
                <span asp-validation-for="LampId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LanternId" class="control-label"></label>
                <select asp-for="LanternId" class="form-control" asp-items="ViewBag.LanternId"></select>
                <span asp-validation-for="LanternId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SectionId" class="control-label"></label>
                <select asp-for="SectionId" class="form-control" asp-items="ViewBag.SectionId"></select>
                <span asp-validation-for="SectionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"style="color:darkorange">Вернуться</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
