@model WebApplicationLighting.Lanterns

@{
    ViewData["Title"] = "Edit";
}

<h2>Изменение</h2>

<h4>Светильники</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LanternId" />
            <div class="form-group">
                <label asp-for="LanternName" class="control-label"></label>
                <input asp-for="LanternName" class="form-control" />
                <span asp-validation-for="LanternName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LanternType" class="control-label"></label>
                <input asp-for="LanternType" class="form-control" />
                <span asp-validation-for="LanternType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
