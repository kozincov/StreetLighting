@using WebApplicationLighting.ViewModels;
@model LanternsViewModel

@{
    ViewData["Title"] = "Index";
}

<h2>Сведенье о Светильниках</h2>

<form method="get">
    <div class="form-inline">
        <label class="control-label">LanternName: </label>
        @Html.TextBox("lanternName", Model.FilterViewModel.SelectedLanternName, htmlAttributes: new { @class = "form-control" })

        <label class="control-label">LanternType: </label>
        @Html.TextBox("lanternType", Model.FilterViewModel.SelectedLanternType, htmlAttributes: new { @class = "form-control" })
        <input type="submit" value="Filter" class="btn btn-default" />
    </div>
</form>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index"
                   asp-route-sortOrder="@(Model.SortViewModel.LanternNameAscSort)"
                   asp-route-lanternName="@(Model.FilterViewModel.SelectedLanternName)"
                   asp-route-lanternType="@(Model.FilterViewModel.SelectedLanternType)">Сведенье о Светильниках</a>
            </th>
            <th>
                <a asp-action="Index"
                   asp-route-sortOrder="@(Model.SortViewModel.LanternTypeAscSort)"
                   asp-route-lanternName="@(Model.FilterViewModel.SelectedLanternName)"
                   asp-route-lanternType="@(Model.FilterViewModel.SelectedLanternType)">Тип Светильников</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Lanterns) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LanternName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LanternType)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.LanternId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.LanternId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.LanternId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
@if (Model.PageViewModel.HasPreviousPage)
{
    <a asp-action="Index"
       asp-route-page="@(Model.PageViewModel.PageNumber - 1)"
       class="btn btn-default btn">
        <i class="glyphicon glyphicon-chevron-left"></i>
        Назад
    </a>
}
@if (Model.PageViewModel.HasNextPage)
{
    <a asp-action="Index"
       asp-route-page="@(Model.PageViewModel.PageNumber + 1)"
       class="btn btn-default btn">
        Вперед
        <i class="glyphicon glyphicon-chevron-right"></i>
    </a>
}